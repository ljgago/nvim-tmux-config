# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Indentation for C/C++ files
[*.{c,cpp,h,hpp}]
indent_style = space
indent_size = 4

# Indentation for Go files
[*.go]
indent_style = tab
indent_size = 8

#Indentation for JSON files
[*.json]
indent_style = space
indent_size = 2

# Indentation for HTML files
[*.{html,js}]
indent_style = space
indent_size = 2

# Indentation for Markdown files
[*.{markdown,md}]
indent_style = space
indent_size = 2

# Indentation for Rust files
[*.rs]
indent_style = space
ident_size = 4

# Indentation for Proto files
[*.proto]
indent_style = space
indent_size = 2

# Identation for vue files
[*.vue]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2
